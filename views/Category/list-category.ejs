<!DOCTYPE html>
<html lang="es-AR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CEDEOS</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <br>
  <div class="row container centered" width="100vw">
    <div class="text-center text-white">
      <h2 class="h_table">Tabla de categorias</h2>
    </div>
    <br>
    <br>
    <br>
    <table class="table table-hover table-dark">
      <thead>
        <th scope="col">Categoria</th>
        <th scope="col">Creado</th>
        <th scope="col">Actualizado</th>
        <th scope="col">Acciones</th>
      </thead>
      <tbody>
        <% listCategory.forEach(function(categoria) { %>
          <tr>
            <td>
              <%= categoria.nombre_categoria %>
            </td>
            <td>
              <%= categoria.creado.toLocaleDateString() %>
                <%= categoria.creado.toLocaleTimeString() %>
            </td>
            <td>
              <%= categoria.actualizado.toLocaleDateString() %>
                <%= categoria.actualizado.toLocaleTimeString() %>
            </td>
            <td>
              <div class="row">
                <div class="row">
                  <form action="/edit-category" method="GET">
                    <input type="hidden" name="id" value="<%= categoria.id %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="/delete-category" method="POST">
                    <input type="hidden" name="id" value="<%= categoria.id %>">
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <br>
    <br>
    <div class="float-start buttons">
      <a href="/" class="btn primary-btn">Volver atr√°s</a>
      <a href="/add-category" class="btn primary-btn">Agregar categoria</a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
</body>

</html>